    "bootstrap": "^5.1.3",
    "mongodb": "^4.2.2",
    "next": "12.0.7",
    "next-transpile-modules": "^9.0.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-player": "^2.9.0",
    "react-reveal": "^1.2.2",
    "react-slick": "^0.28.1",
    "react-tilt": "^0.1.4",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@sanity/cli": "^2.23.2",
    "autoprefixer": "^10.4.0",
    "lerna": "^4.0.0",
    "postcss": "^8.4.4",
    "tailwindcss": "^3.0.0"
